{
    // Disable built-in CSS/SCSS/LESS validation so Tailwind @rules don't trigger "Unknown at rule" errors
    "css.validate": false,
    "scss.validate": false,
    "less.validate": false,

    "chat.promptFilesRecommendations": {
        "speckit.constitution": true,
        "speckit.specify": true,
        "speckit.plan": true,
        "speckit.tasks": true,
        "speckit.implement": true
    },
    "chat.tools.terminal.autoApprove": {
        ".specify/scripts/bash/": true,
        ".specify/scripts/powershell/": true
    }
}

